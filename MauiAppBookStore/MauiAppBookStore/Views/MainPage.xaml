<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppBookStore.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="150"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to the BookStore"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="You can search on a book you would like to see"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                FontSize="18"
                HorizontalOptions="Center" />

            <SearchBar Placeholder="Search items..." />

            <Button Text="View Books"
                Margin="20,30,20,0"
                Clicked="OnBookListButtonClicked"/>

            <Button Text="View Favorites"
                Margin="20,0,20,0"
                Clicked="OnFavoritesButtonClicked"/>

            <Button Text="View GeoLocation"
                Margin="20,0,20,0"
                Clicked="OnGeoLocation"/>

        </VerticalStackLayout>
    </ScrollView>
    
